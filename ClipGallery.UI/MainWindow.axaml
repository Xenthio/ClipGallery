<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ClipGallery.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="using:ClipGallery.Core.Models"
        xmlns:views="using:ClipGallery.UI.Views"
        xmlns:converters="using:ClipGallery.UI.Converters"
        xmlns:controls="using:ClipGallery.UI.Controls"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ClipGallery.UI.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="ClipGallery">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainViewModel />
    </Design.DataContext>

    <Grid ColumnDefinitions="250, *">
        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#202020" Padding="10">
            <Grid RowDefinitions="*, Auto">
                <ScrollViewer Grid.Row="0">
                    <StackPanel>
                        <!-- Library Section Header -->
                        <Button Command="{Binding ToggleLibraryExpandedCommand}" 
                                Background="Transparent" 
                                HorizontalAlignment="Stretch" 
                                HorizontalContentAlignment="Left"
                                Padding="0" Margin="0,0,0,5">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="▶" FontSize="10" Foreground="#808080" VerticalAlignment="Center">
                                    <TextBlock.RenderTransform>
                                        <RotateTransform Angle="{Binding IsLibraryExpanded, Converter={x:Static converters:BoolToAngleConverter.Instance}}"/>
                                    </TextBlock.RenderTransform>
                                </TextBlock>
                                <TextBlock Text="LIBRARY" FontWeight="Bold" Foreground="#808080" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <StackPanel IsVisible="{Binding IsLibraryExpanded}">
                            <Button Content="All Clips" Command="{Binding FilterByGameCommand}" CommandParameter="{x:Null}" Background="Transparent" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"/>
                            
                            <ItemsControl ItemsSource="{Binding Gallery.Games}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                         <Button Content="{Binding .}" 
                                                 Command="{Binding $parent[Window].((vm:MainViewModel)DataContext).FilterByGameCommand}" 
                                                 CommandParameter="{Binding .}"
                                                 Background="Transparent" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Margin="0,2"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <!-- Tags Section Header -->
                        <Button Command="{Binding ToggleTagsExpandedCommand}" 
                                Background="Transparent" 
                                HorizontalAlignment="Stretch" 
                                HorizontalContentAlignment="Left"
                                Padding="0" Margin="0,15,0,5">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="▶" FontSize="10" Foreground="#808080" VerticalAlignment="Center">
                                    <TextBlock.RenderTransform>
                                        <RotateTransform Angle="{Binding IsTagsExpanded, Converter={x:Static converters:BoolToAngleConverter.Instance}}"/>
                                    </TextBlock.RenderTransform>
                                </TextBlock>
                                <TextBlock Text="TAGS" FontWeight="Bold" Foreground="#808080" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <StackPanel IsVisible="{Binding IsTagsExpanded}">
                            <Button Content="Any Tag" Command="{Binding FilterByTagCommand}" CommandParameter="{x:Null}" Background="Transparent" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"/>
                            
                            <ItemsControl ItemsSource="{Binding Gallery.Tags}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                         <Button Content="{Binding .}" 
                                                 Command="{Binding $parent[Window].((vm:MainViewModel)DataContext).FilterByTagCommand}" 
                                                 CommandParameter="{Binding .}"
                                                 Background="Transparent" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Margin="0,2"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
                
                <Button Grid.Row="1" Content="Settings" 
                        Command="{Binding OpenSettingsCommand}" 
                        HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                        Background="#303030" Foreground="#AAA" Margin="0,10,0,0"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1" RowDefinitions="Auto, *">
            <!-- Header -->
            <Border Grid.Row="0" Padding="20" Background="#1a1a1a">
                 <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="All Clips" FontSize="24" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Gallery.Clips.Count, StringFormat='({0} items)'}" VerticalAlignment="Center" Foreground="#808080"/>
                 </StackPanel>
            </Border>

            <!-- Loading Indicator -->
            <ProgressBar Grid.Row="1" IsIndeterminate="True" IsVisible="{Binding IsLoading}" VerticalAlignment="Top" ZIndex="1"/>

            <!-- Gallery Grid -->
            <ListBox Grid.Row="1" 
                     ItemsSource="{Binding Gallery.Clips}"
                     Background="Transparent"
                     BorderThickness="0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.Styles>
                    <Style Selector="ListBoxItem">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="Background" Value="Transparent"/>
                    </Style>
                    <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                        <Setter Property="Background" Value="Transparent"/>
                    </Style>
                    <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
                        <Setter Property="Background" Value="Transparent"/>
                    </Style>
                </ListBox.Styles>
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="vm:ClipViewModel">
                        <Border Width="240" Height="180" Background="#2d2d2d" CornerRadius="8" ClipToBounds="True">
                            <Border.ContextMenu>
                                <ContextMenu Opened="OnClipContextMenuOpened">
                                    <MenuItem Header="Play" 
                                              Command="{Binding $parent[Window].((vm:MainViewModel)DataContext).OpenPlayerCommand}"
                                              CommandParameter="{Binding .}"/>
                                    <Separator/>
                                    <MenuItem Header="Rename..." 
                                              Command="{Binding $parent[Window].((vm:MainViewModel)DataContext).RenameClipCommand}"
                                              CommandParameter="{Binding .}"/>
                                    <MenuItem Header="Edit Tags..." 
                                              Command="{Binding $parent[Window].((vm:MainViewModel)DataContext).EditTagsCommand}"
                                              CommandParameter="{Binding .}"/>
                                    <MenuItem Header="Set Rating">
                                        <MenuItem Header="★★★★★ (5)" 
                                                  Command="{Binding $parent[Window].((vm:MainViewModel)DataContext).SetRatingCommand}"
                                                  CommandParameter="5"/>
                                        <MenuItem Header="★★★★☆ (4)" 
                                                  Command="{Binding $parent[Window].((vm:MainViewModel)DataContext).SetRatingCommand}"
                                                  CommandParameter="4"/>
                                        <MenuItem Header="★★★☆☆ (3)" 
                                                  Command="{Binding $parent[Window].((vm:MainViewModel)DataContext).SetRatingCommand}"
                                                  CommandParameter="3"/>
                                        <MenuItem Header="★★☆☆☆ (2)" 
                                                  Command="{Binding $parent[Window].((vm:MainViewModel)DataContext).SetRatingCommand}"
                                                  CommandParameter="2"/>
                                        <MenuItem Header="★☆☆☆☆ (1)" 
                                                  Command="{Binding $parent[Window].((vm:MainViewModel)DataContext).SetRatingCommand}"
                                                  CommandParameter="1"/>
                                        <MenuItem Header="No Rating (0)" 
                                                  Command="{Binding $parent[Window].((vm:MainViewModel)DataContext).SetRatingCommand}"
                                                  CommandParameter="0"/>
                                    </MenuItem>
                                    <Separator/>
                                    <MenuItem Header="Move to Game..." 
                                              Command="{Binding $parent[Window].((vm:MainViewModel)DataContext).MoveToGameCommand}"
                                              CommandParameter="{Binding .}"/>
                                    <Separator/>
                                    <MenuItem Header="Show in Explorer" 
                                              Command="{Binding $parent[Window].((vm:MainViewModel)DataContext).ShowInExplorerCommand}"
                                              CommandParameter="{Binding .}"/>
                                    <MenuItem Header="Delete" Foreground="#FF5555"
                                              Command="{Binding $parent[Window].((vm:MainViewModel)DataContext).DeleteClipCommand}"
                                              CommandParameter="{Binding .}"/>
                                </ContextMenu>
                            </Border.ContextMenu>
                            <Button Command="{Binding $parent[Window].((vm:MainViewModel)DataContext).OpenPlayerCommand}" 
                                    CommandParameter="{Binding .}"
                                    Background="Transparent" Padding="0" Margin="0" BorderThickness="0">
                                <Grid RowDefinitions="*, Auto">
                                    <!-- Thumbnail / Loading / Failed -->
                                    <Panel Grid.Row="0" Background="#000">
                                         <TextBlock Text="Loading..." IsVisible="{Binding IsLoadingThumbnail}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#505050"/>
                                         <TextBlock Text="No Preview" IsVisible="{Binding IsThumbnailFailed}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#AA3333" FontWeight="Bold"/>
                                         <Image Source="{Binding Thumbnail}" Stretch="UniformToFill" IsVisible="{Binding !IsLoadingThumbnail}"/>
                                    </Panel>
                                    
                                    <!-- Info -->
                                    <StackPanel Grid.Row="1" Margin="8">
                                        <TextBlock Text="{Binding FileName}" TextTrimming="CharacterEllipsis" FontWeight="Medium"/>
                                        <Grid ColumnDefinitions="*, Auto">
                                            <TextBlock Grid.Column="0" Text="{Binding DisplayGameName}" FontSize="12" Foreground="#808080" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                            <controls:RatingControl Grid.Column="1" Value="{Binding Rating}" Height="12" VerticalAlignment="Center"/>
                                        </Grid>
                                    </StackPanel>
                                    
                                    <!-- Duration Overlay -->
                                    <Border Grid.Row="0" Background="#80000000" CornerRadius="4" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="4" Padding="4,2">
                                        <TextBlock Text="{Binding DurationDisplay}" FontSize="11" Foreground="White" />
                                    </Border>
                                </Grid>
                            </Button>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
        
        <!-- Player Overlay -->
        <ContentControl Grid.Column="0" Grid.ColumnSpan="2" 
                        Content="{Binding CurrentPlayer}"
                        IsVisible="{Binding CurrentPlayer, Converter={x:Static ObjectConverters.IsNotNull}}">
            <ContentControl.ContentTemplate>
                <DataTemplate DataType="vm:PlayerViewModel">
                     <views:PlayerView />
                </DataTemplate>
            </ContentControl.ContentTemplate>
        </ContentControl>
    </Grid>
</Window>
