<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ClipGallery.UI.Views.EditTagsDialog"
        Width="400" Height="200"
        WindowStartupLocation="CenterOwner"
        SystemDecorations="BorderOnly"
        Background="#1a1a1a"
        Title="Edit Tags">
        
    <Border BorderBrush="#333" BorderThickness="1">
        <Grid RowDefinitions="Auto, Auto, Auto, Auto" Margin="20">
            <TextBlock Text="Edit Tags" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBlock Grid.Row="1" Text="Separate tags with commas" FontSize="12" Foreground="#808080" Margin="0,0,0,10"/>
            
            <TextBox Grid.Row="2" x:Name="TagsInput" Watermark="tag1, tag2, tag3..." Margin="0,0,0,15" Height="60" AcceptsReturn="True"/>
            
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
                <Button Content="Cancel" Click="OnCancelClick" Background="#404040" Foreground="#AAA"/>
                <Button Content="Save" Click="OnSaveClick" Background="#007ACC" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
